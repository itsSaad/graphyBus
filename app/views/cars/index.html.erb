<h1>Listing cars</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Company</th>
    <th>Wheels</th>
    <th>Color</th>
    <th>Doors</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.name %></td>
    <td><%= car.company %></td>
    <td><%= car.wheels %></td>
    <td><%= car.color %></td>
    <td><%= car.doors %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

