%hr
%h3 Add a new bus stop
%hr
-@busstop.errors.full_messages
=form_for :busstop, url:{action: "create"}, html:{class: "form-horizontal"} do |f|
	%div.form-group
		=f.label :bus_stop_name, 'Bus Stop Name', {:class => 'col-lg-2 control-label'}
		%span.error-message
			- if not (@busstop.errors[:bus_stop_name].blank?)
				=@busstop.errors[:bus_stop_name].to_s
		%div.col-lg-4
			=f.text_field :bus_stop_name, {:class => "form-control", :placeholder => "Muslim Town"}
	%div.form-group
		=f.label :bus_stop_lat_long, 'Bus Stop LatLong', {:class => 'col-lg-2 control-label'}
		%span.error-message	
			- if not (@busstop.errors[:bus_stop_lat_long].blank?)
				=@busstop.errors[:bus_stop_lat_long].to_s
		%div.col-lg-4
			=f.text_field :bus_stop_lat_long, {:class => 'form-control', :placeholder => "11.11,222.22"}
	%div.form-group
		=f.label :bus_stop_sec_name, 'Bus Stop Sec Name', {:class => 'col-lg-2 control-label'}
		%span.error-message
			- if not (@busstop.errors[:bus_stop_sec_name].blank?)
				=@busstop.errors[:bus_stop_sec_name].to_s
		%div.col-lg-4
			=f.text_field :bus_stop_sec_name, {:class => 'form-control', :placeholder => "Muslim Town 2"}
	%div.form-group
		%div.col-lg-offset-2.col-lg-10
			=f.submit :class => 'btn btn-primary'
			= link_to busstops_path do
				= content_tag :button, class: "btn btn-danger" do
					="Cancel"
